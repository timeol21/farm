{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件 build active file",
            "command": "/usr/bin/g++",  // Windows 下可能是 g++.exe 的路径
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //"${file}",//用于编译单个文件
                "${fileDirname}/*.cpp", // 编译该目录下所有的 cpp 文件
                "${fileDirname}/DataAccess/*.cpp",
                "${fileDirname}/Business/*.cpp",
                "${fileDirname}/Entity/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}", // 在 main.cpp 同级目录下生成可执行文件,这里决定了tasks.json的"program"写什么，写一样的就行
                "-I", "/home/ztl/program/boxfiles/class/ProjectRoot", // 【新增】告诉编译器去这里找 json.hpp
                "-lpthread" // 考虑到你之后要写多线程，建议先加上
            ],
            "options": {
                "cwd": "/home/ztl/program/boxfiles/class/ProjectRoot" // 编译时的当前目录
                // "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。使用 g++ 编译当前 ProjectRoot 下的文件"
        }
    ],
    "version": "2.0.0"
}